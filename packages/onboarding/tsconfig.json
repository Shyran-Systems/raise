{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "dom", "es2015"],
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

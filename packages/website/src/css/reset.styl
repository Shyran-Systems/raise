html,
body
	box-sizing border-box
	font-style normal
	vertical-align baseline
	border 0
	overflow hidden

*, *:before, *:after
	box-sizing inherit
	border 0
	margin 0
	padding 0
	-webkit-tap-highlight-color rgba(0, 0, 0, 0) // Quitar recuadro azul en Android

*
    backface-visibility hidden
    transform-style flat
    tap-highlight-color transparent
    //user-drag none
    outline 0
	user-select none

html
button
input
select
textarea
	color #222

::-moz-selection
	background #b3d4fc
	text-shadow none
	
::selection
	background #b3d4fc
	text-shadow  none


.clearfix:before
.clearfix:after 
	content " "; /* 1 */
	display table /* 2 */

.clearfix:after 
	clear both

.mayus
	text-transform uppercase

h1
h2
h3
h4
h5
	font-size inherit
	font-weight normal

audio
canvas
img
svg
video
	vertical-align middle
	
textarea
	resize vertical
	
//- Remove default fieldset styles.
fieldset
	border 0
	margin 0
	padding 0

li
	//- inline block hack for IE 6&7
	zoom 1
	*display inline
	
a
	-webkit-touch-callout none // Quitar recuadro azul en Android

	&:link,
	&:hover,
	&:active,
	&:focus
		outline 0
		outline none
		border none

*:focus
	outline 0
	outline none

/* IE6 fix */
* html #sidebar-first
	left 160px  /* RC width */

.hidden
	display none

.no-events
	pointer-events none !important
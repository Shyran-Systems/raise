@import "fonts.styl"

//- Media queries
$Lg 	= "(max-width: 1280px)"
$Md 	= "(max-width : 1024px)"
$Sm 	= "(max-width : 768px)"

$maxWidth = 800px

//- Colors --------------------------
$b 			= #fff
$n 			= #3C4251
$gris 		= #CFD0D4
$gris2 		= #F9F9F9
$rosa 		= #EB3F93
$verd 		= #11D89B
$verd2 		= #0BA76E
$blau 		= #3DC9FF

$shadow = rgba(217,217,217, 0.61)

@import "functions.styl"
    
*,
*:after,
*:before
	box-sizing border-box

html
	font-size 62.5%
body
	margin 0 
	padding 0
	fMed()
	
	width 100vw
	height 100vh
	
	opacity 0

	background linear-gradient(180deg, $gris2 0%, $b 100%)
	
	&.visible
		opacity 1
		transition opacity 1s ease-out
	
	main
		position absolute
		width 100vw
		height 100vh

		overflow hidden
		overflow-y auto

		fMed()
		font-size 1.6rem
		line-height 1.6rem

		header
			position fixed
			top 0
			left 0
			width 100%
			height 90px
			box-shadow: 0px 0px 15px rgba(0,0,0,0.3);
			z-index 999
			background-color $b

			transition transform .3s ease-out
			transform translateY(-110%)

			&.visible
				transform translateY(0%)

			.content
				position relative 
				width 100%
				max-width $maxWidth
				margin 0 auto 

				#logo-raise
					width 150px
					height 50px
					margin-top 20px

				.buttons
					float right
					button
						height 40px
						margin-top 25px

						&#login
							width 110px
							margin-right 20px
						&#signup
							width 130px

		button
			background-color $b
			border-radius 4px
			border-width 1px
			border-style solid
			fBold()
			font-size 1.8rem
			line-height 2.4rem
			text-align center
			padding 0.8rem 0
			pointer-events auto
			cursor pointer
			transition all .12s ease-out

			&.colored
				
				background-color $rosa
				border-color $rosa
				color $b
				&:hover
					background $b
					border-color $rosa
					color $rosa
					
			&.lp-get-started
				background linear-gradient(134.72deg, #00A76F 0%, #00DA9E 100%)
				border-color $b
				color $b
				&:hover
					background $b
					border-color $verd2
					color $verd2

			&.white
				background-color $b
				border-color $gris
				color $n
				&:hover
					background-color $gris
					color $b



		#background
			position absolute
			z-index 1
			width 100%
			height auto
			pointer-events none
			overflow hidden

			#floating-elements
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				transition transform 1s ease-out

				.segment
					position absolute
					top 0
					left 50%

					&#segment1
						width 1504px
						height 1453px
						top 92%
						transform translateX(-12%)

					&#segment2
						width 1504px
						height 1453px
						top 64%
						transform scale(0.5) translateX(-206%)

					&#segment3
						width 1504px
						height 1453px
						top 33%
						transform scale(0.6) translateX(5%)
					
					&#segment4
						width 1504px
						height 1453px
						top 13%
						transform scale(0.5) translateX(-200%)

					&#segment5
						width 1504px
						height 1453px
						top -7%
						transform scale(0.6) translateX(28%)

			section
				width 100%
				height 100vh
				position relative

				&#home
					#city
						position absolute
						bottom 0
						left 50%
						width 2560px
						height 300px
						overflow visible
						margin-left calc(2560px * -0.5)
						mix-blend-mode multiply

						.layer
							absolute100()
							&#clouds
								z-index 1
							&#buildings-far
								z-index 2
							&#buildings-near
								z-index 3


				&#footer
					background-image linear-gradient( #041D45 0%, #044D74 80%,  rgba(#044D74, 0.0) 100% )
					
					#sky
						position absolute
						top 0
						left 50%
						width 2560px
						height 370px
						overflow visible
						margin-left calc(2560px * -0.5)
						mix-blend-mode screen

						.layer
							absolute100()
							&#stars
								z-index 1
							&#stela
								z-index 2
							&#planets
								z-index 3
								top -75px
							&#rocket
								z-index 4



		
		//- Sky lanterns animation
		[aria-label="animation"]
			position absolute

			left 0
			width 100%
			text-align center
			pointer-events none
			z-index 2

			&.fixed
				position fixed
				top 0

			svg
				width 1000px !important
				height 500px !important
				transform translateY(-100px)
			

		#sections
			position absolute
			top 0
			left 0
			width 100%
			height auto
			color #5C5D5D
			//transition transform .9s cubic-bezier(0.1, 0.02, 0, 1.0)
			z-index 3

			display flex
			flex-direction column-reverse
		
			h1
				fBold()
				font-size 5rem
				line-height 6rem
			h2
				fBold()
				font-size 2.6rem
				line-height 3.6rem
			h3
				fBold()
				font-size 2.2rem
				line-height 3.2rem
			h4
				fMed()
				font-size 1.8rem
				line-height 2.8rem

			section
				width 100%
				height 100vh
				position relative
				padding 30vh 0
				//border-top solid 1px rgba(#000, 0.2)
				text-align center
				background transparent
				//background-image linear-gradient( $gris2 0%, $b 100% )
				
				.content
					max-width $maxWidth
					margin 5vh auto
					position inherit

				picture
					display block
					background-color rgba($b, 0.5)


				&#home
					text-align left
					h1
						max-width 62rem

					h4
						margin-top 0.7rem
						margin-bottom 2.2rem
						width 100%
						max-width 377px

					button.colored
						width 170px
						height 48px

				&#how
					text-align left

					h4
						margin 4.0rem 0 2.3rem 0
						width 100%
						max-width 678px
					
					#infography
						height 392px
						width 810px
						background-color $b
						box-shadow 0 0 26px 0 $shadow

				
				.cards
					display flex
					align-items center
					justify-content center
					justify-items center

					.card
						position relative
						align-self flex-start
					

				&#lender
					text-align center

					h1
						margin-bottom 4.0rem

					.cards
						margin-bottom 60px
						
						.card
							width 270px
							height 342px
							margin 0 35px
							background-color $b
							box-shadow 0 0 26px 0 $shadow

							picture
								display block
								height 180px
								width 100%
								border 1px solid $gris

							.text
								padding 3.2rem 4rem 0 4rem
						

					button.colored
						width 290px
						height 68px


				&#borrow
					.columns
						display flex
						align-items center
						justify-content center
						justify-items center
						text-align left

						margin-top 40px
						
						.column
							position relative
							align-self flex-start

							&#col-1
								width 290px
								margin-right 66px

								h3
									fMed()
									margin-top 40px
									margin-bottom 40px

								button.colored
									width 100%
									height 68px

							&#col-2
								picture
									height 307px
									width 455px
									border 1px solid #D7DEE4

				&#testimonials
					.cards
						margin 90px 0px 30px 0px

						.card
							text-align left
							width 358px
							height 303px
							padding 10rem 5rem 0 2rem
							background-color rgba(232,232,232,0.5)
							border-radius 13px
							margin 0 20px

							p
								font-size 1.8rem
								line-height 2.8rem
								

								&:before
									content 'â€œ'
									font-size: 12.2rem
									line-height 14.6rem
									font-weight 900
									position absolute
									top 2.4rem
									left 2.0rem

				


				&#keypoints
					.cards
						margin 90px 0px 30px 0px
						
						.card
							width 200px
							text-align center
							margin 0 40px

							picture
								display block
								height 120px
								width 100%
								border 1px solid $gris
								border-radius 4px
								margin-bottom 20px

							p
								font-size 1.6rem
								line-height 2.4rem
								

					button.colored
						width 290px
						height 68px
						
						margin 30px 0 20px 0

					a
						color $verd2
						text-decoration none
						display block

						&:hover
							color $gris
					
			footer
				width 100%
				height 100vh
				position relative
				//border-top solid 1px rgba(#000, 0.2)
				text-align left
				//height 95vh
				padding-top 50vh
				color $b
				fBold()

				.content
					max-width 800px
					margin 0 auto
					padding 0 5vw
					position inherit

					nav
						display grid
						
						grid: 'myArea myArea' '. .' '. .';
						grid-gap 2.8rem
						grid-template-columns auto auto
						grid-auto-flow column
						a
							color $b
							fBold()
							font-size 1.8rem
							text-decoration none

							&:hover
								text-decoration underline

							&:first-child
								grid-area myArea
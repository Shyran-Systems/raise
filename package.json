{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "yarn run build:deps && lerna run dev --stream --scope client",
    "dev:int": "yarn run build:deps && lerna run dev:int --stream --scope client",
    "dev-all": "lerna run dev --stream --parallel",
    "dev-all:int": "lerna run dev:int --stream --parallel",
    "clean": "lerna exec -- rm -rf ./node_modules ./dist ./build ./bundle.*.js || true && rm -rf node_modules || true && rm -rf yarn.lock || true",
    "build": "lerna run build --stream",
    "bootstrap:deps": "npx lerna bootstrap --scope '{@raisehq/components,@raisehq/onboarding}'",
    "build:deps": "lerna run --stream --scope '{@raisehq/components,@raisehq/onboarding}' build",
    "rollup": "lerna run --stream --scope '@raisehq/libs' build:production",
    "dev:rollup": "lerna run --stream --scope '@raisehq/libs' start",
    "client:build:integration": "yarn run build:deps && lerna run build:integration --stream --scope client",
    "client:build:production": "yarn run build:deps && lerna run build:production --stream --scope client",
    "prettier": "prettier --write **/*.jsx",
    "watch": "lerna run --parallel --scope '{@raisehq/components,@raisehq/onboarding,@raisehq/client}' watch",
    "watch:storybook": "lerna run --parallel --scope '{@raisehq/components,@raisehq/onboarding,@raisehq/storybook}' watch"
  },
  "dependencies": {
    "lerna": "^3.16.4",
    "react-scripts": "3.4.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  }
}

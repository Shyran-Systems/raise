{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-knobs": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "@truffle-types/web3-utils": "^0.1.1",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "babel-loader": "^8.0.6",
    "cypress-image-snapshot": "^3.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.2.1",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.14.3",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lodash": "4.17.14",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^4.1.0",
    "mochawesome-merge": "^2.0.1",
    "mochawesome-report-generator": "^3.1.5",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-test-renderer": "^16.9.0",
    "react-use-cookie": "^1.0.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2",
    "validator": "^11.1.0",
    "webpack": "^4.39.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "yarn run build:deps && lerna run dev --stream --scope client",
    "dev:int": "yarn run build:deps && lerna run dev:int --stream --scope client",
    "dev-all": "lerna run dev --stream --parallel",
    "dev-all:int": "lerna run dev:int --stream --parallel",
    "clean": "lerna exec -- rm -rf ./node_modules ./lib ./build || true && rm -rf node_modules || true",
    "build": "lerna run build --stream",
    "build:deps": "lerna run --stream --scope '{@raisehq/components,@raisehq/onboarding}' build",
    "client:build:integration": "yarn run build:deps && lerna run build:integration --stream --scope client",
    "client:build:production": "yarn run build:deps && lerna run build:production --stream --scope client"
  },
  "dependencies": {
    "@raisehq/components": "file:packages/components",
    "@raisehq/onboarding": "file:packages/onboarding",
    "client": "file:packages/client",
    "embed": "file:packages/embed",
    "flowtest": "file:packages/testing"
  }
}
